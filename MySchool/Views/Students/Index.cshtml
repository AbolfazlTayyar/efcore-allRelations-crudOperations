@model IEnumerable<Student>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">FisrtName</th>
			<th scope="col">LastName</th>
			<th scope="col">DateOfBirth</th>
			<th scope="col">TeacherName</th>
			<th scope="col">Operations</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.FirstName</td>
				<td>@item.LastName</td>
				<td>@item.DateOfBirth</td>
				<td>@item.Teacher.Name</td>
				<td>
					<a asp-action="Update" asp-route-id="@item.Id" type="button" class="btn btn-secondary">Update</a> |
					<a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<a asp-action="Create" type="button" class="btn btn-primary">Create</a>